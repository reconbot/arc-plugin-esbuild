{
  "name": "arc-plugin-esbuild",
  "version": "0.0.0-development",
  "description": "Use Typescript and esbuild with arc.codes!",
  "types": "dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index-esm.mjs"
  },
  "engines": {
    "node": "^14.13 || >=16"
  },
  "repository": "git@github.com:reconbot/arc-plugin-esbuild.git",
  "homepage": "https://github.com/reconbot/arc-plugin-esbuild",
  "scripts": {
    "test": "npm run build && mocha",
    "lint": "tsc && eslint lib/**/*.ts",
    "format": "eslint lib/**/*.ts --fix",
    "clean": "rm -rf dist-ts dist",
    "build": "npm run clean && tsc -p tsconfig-build.json && rollup -c && node -r esbuild-register bundle-types",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "serverless",
    "architect",
    "plugin",
    "esbuild"
  ],
  "license": "MIT",
  "dependencies": {
    "@architect/utils": "^3.1.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "node-watch": "^0.7.3"
  },
  "peerDependencies": {
    "esbuild": "^0.14.49 || ^0.15.0"
  },
  "devDependencies": {
    "@architect/functions": "5.2.1",
    "@architect/inventory": "3.1.1",
    "@architect/package": "8.1.3",
    "@microsoft/api-extractor": "7.28.7",
    "@types/chai": "4.3.1",
    "@types/fs-extra": "9.0.13",
    "@types/glob": "7.2.0",
    "@types/mocha": "9.1.1",
    "@types/node": "18.6.3",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "chai": "4.3.6",
    "esbuild": "0.15.2",
    "esbuild-register": "3.3.3",
    "eslint": "8.21.0",
    "mocha": "10.0.0",
    "rollup": "2.77.2",
    "semantic-release": "19.0.3",
    "typescript": "4.7.4"
  },
  "mocha": {
    "bail": true,
    "require": [
      "esbuild-register"
    ],
    "spec": "lib/**/*-test.ts"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
