{
  "name": "arc-plugin-esbuild",
  "version": "0.0.0-development",
  "description": "Use Typescript and esbuild with arc.codes!",
  "types": "dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index-esm.mjs"
  },
  "engines": {
    "node": "^14.13 || >=16"
  },
  "repository": "git@github.com:reconbot/arc-plugin-esbuild.git",
  "homepage": "https://github.com/reconbot/arc-plugin-esbuild",
  "scripts": {
    "test": "npm run build && mocha",
    "lint": "tsc && eslint lib/**/*.ts",
    "format": "eslint lib/**/*.ts --fix",
    "clean": "rm -rf dist-ts dist",
    "build": "npm run clean && tsc -p tsconfig-build.json && rollup -c",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "serverless",
    "architect",
    "plugin",
    "esbuild"
  ],
  "license": "MIT",
  "dependencies": {
    "@architect/utils": "^3.1.2",
    "fs-extra": "^10.1.0"
  },
  "peerDependencies": {
    "esbuild": "^0.14.49 || ^0.15.0"
  },
  "devDependencies": {
    "@architect/functions": "5.2.3",
    "@architect/inventory": "3.6.1",
    "@tsconfig/node14": "14.1.0",
    "@types/chai": "4.3.5",
    "@types/fs-extra": "9.0.13",
    "@types/mocha": "10.0.1",
    "@types/node": "18.17.9",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "chai": "4.3.8",
    "esbuild": "0.15.18",
    "esbuild-register": "3.4.2",
    "eslint": "8.47.0",
    "mocha": "10.2.0",
    "rollup": "2.79.1",
    "semantic-release": "21.1.0",
    "typescript": "5.1.6"
  },
  "mocha": {
    "bail": true,
    "require": [
      "esbuild-register"
    ],
    "spec": "lib/**/*-test.ts"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
